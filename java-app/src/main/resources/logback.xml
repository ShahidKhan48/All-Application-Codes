<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} [%X{TRX_ID}][%X{current_user}]%clr(:){faint} %m${LOG_EXCEPTION_CONVERSION_WORD:-%wEx} [%mdc]%n}"/>
  <property name="FILE_LOG_PATTERN" value="${FILE_LOG_PATTERN:-%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} [%t] %-40.40logger{39} [%X{TRX_ID}][%X{current_user}]: %m${LOG_EXCEPTION_CONVERSION_WORD:-%wEx} [%mdc]%n}"/>
  <include resource="org/springframework/boot/logging/logback/defaults.xml" />
  <property name="LOG_FILE" value="${LOG_FILE:-}" />
  <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

  <appender name="ASYNC-CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="CONSOLE" />
  </appender>



  <root level="WARN">
    <appender-ref ref="ASYNC-CONSOLE" />
  </root>

  <logger name="com.ninjacart" level="INFO" additivity="false">
    <appender-ref ref="ASYNC-CONSOLE" />
  </logger>

  <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter">
    <level value="INFO" />
  </logger>

</configuration>